<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<!-- Definimos el listado -->
	<record model="ir.ui.view" id="view_account_invoicex_tree">
		<field name="name">account.invoicex.tree</field>
		<field name="model">account.invoicex</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Registro de Facturas">
				<field name="invoice_number"></field>
				<field name="period_id"></field>
				<field name="base"></field>
				<field name="total_amount"></field>
			</tree>
		</field>
	</record>
<!-- Definimos el Formulario para el model -->
	<record model="ir.ui.view" id="view_account_invoicex_form">
		<field name="name">account.invoicex.form</field>
		<field name="model">account.invoicex</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Registro de Ventas">
				<field name="journal_id"></field>
				<field name="period_id"></field>
				<field name="date_invoice"></field>
				<field name="invoice_number"></field>
				<field name="control_number"></field>
				<field name="partner_id"></field>
				<field name="no_tax" on_change="onchange_total_iva(base,tax_amount,no_tax)"></field>
				<field name="base" on_change="onchange_iva(base,no_tax)"></field>
				<field name="tax_id" on_change="onchange_iva(base,no_tax)"></field>
				<field name="tax_amount" on_change="onchange_total_iva(base,tax_amount,no_tax)"></field>
				<field name="total_amount"></field>
			</form>
		</field>
	</record>	
<!-- Definimos una accion para disparar el formulario de Registro -->
	<record model="ir.actions.act_window" id="open_account_invoicex_form">
		<field name="name">Ventas</field>
		<field name="res_model">account.invoicex</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
	</record>
	<!-- Definimos la opcion del menu para vendedores -->
	<menuitem name="Facturas" parent="base.menu_base_partner" id="account_invoicex_view_form" action="open_account_invoicex_form" />
</data>
</openerp>